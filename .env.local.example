# Google Analytics 4
# Get your Measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# CRM Integration (optional)
# HubSpot API Key
HUBSPOT_API_KEY=
HUBSPOT_PORTAL_ID=

# Salesforce (optional)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Toss Payments
# Get your keys from: https://developers.tosspayments.com/
# Client Key (Public - exposed to frontend)
NEXT_PUBLIC_TOSS_CLIENT_KEY=test_ck_XXXXXX
# Secret Key (Private - server-side only, NEVER expose to frontend)
TOSS_SECRET_KEY=test_sk_XXXXXX
# Payment Widget Version (default: 2.0)
NEXT_PUBLIC_TOSS_PAYMENT_WIDGET_VERSION=2.0

# Site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Supabase
# Get these from: https://supabase.com/dashboard → Settings → API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-public-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres
